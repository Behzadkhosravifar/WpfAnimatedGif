<Window x:Class="WaitSplash.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="SplashWindow"
	xmlns:gif="http://wpfanimatedgif.codeplex.com"
        gif:ImageBehavior.AnimateInDesignMode="True"
        WindowStartupLocation="Manual"
	Title="WaitSplash"
	Width="200" Height="200" AllowsTransparency="True" WindowStyle="None" Background="{x:Null}" ShowInTaskbar="False" ResizeMode="NoResize" ToolTip="Please Wait . . . ">

    <Grid x:Name="LayoutRoot" ToolTip="Please Wait . . ." Opacity="0.9">
        <Image Stretch="Fill"
                       gif:ImageBehavior.AnimatedSource="loader.gif"
                       gif:ImageBehavior.RepeatBehavior="Forever"
                       gif:ImageBehavior.AutoStart="True" Margin="10">
            <Image.Effect>
                <DropShadowEffect Direction="0" ShadowDepth="0" BlurRadius="8"/>
            </Image.Effect>
        </Image>
        <TextBlock x:Name="lblTimeNo" HorizontalAlignment="Center" Height="50" Margin="0" TextWrapping="Wrap" Text="0" VerticalAlignment="Center" Width="85" FontWeight="Bold" TextAlignment="Center" FontSize="48" Foreground="#FFFF2929" FontFamily="/WaitSplash;component/Fonts/#Digital-7">
            <TextBlock.Effect>
                <DropShadowEffect Direction="0" ShadowDepth="0" Color="#FFE6C500" BlurRadius="8"/>
            </TextBlock.Effect>
        </TextBlock>

    </Grid>
</Window>
